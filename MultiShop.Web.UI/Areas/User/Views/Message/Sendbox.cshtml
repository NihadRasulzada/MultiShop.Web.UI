@model List<ResultSendboxMessageDto>

@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Gönderilen Mesaj Listesi</h4>
                        <div class="table-responsive pt-3">
                            @if (Model != null && Model.Any())
                            {
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Alıcı</th>
                                            <th>Konu</th>
                                            <th>Tarih</th>
                                            <th>Durum</th>
                                            <th>Sil</th>
                                            <th>Mesajı Aç</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th>@count</th>
                                                <td>@item.ReceiverId</td>
                                                <td>@item.Subject</td>
                                                <td>@(item.MessageDate.ToString("dd-MMM-yyyy") ?? "Tarih Yok")</td>
                                                <td>@(item.IsRead ? "Oxundu" : "Oxunmadı")</td>
                                                <td><a href="/User/Message/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
                                                <td><a href="/User/Message/Details/@item.Id" class="btn btn-info">Mesajı Aç</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    Henüz gönderilen bir mesaj bulunmuyor.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
