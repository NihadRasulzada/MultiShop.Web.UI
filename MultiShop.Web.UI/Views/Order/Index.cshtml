@model CreateOrderAddressDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>
            <div class="bg-light p-30 mb-5">
                <form method="post" asp-action="AddressSave">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Name">First Name</label>
                            <input class="form-control" type="text" asp-for="Name" placeholder="John">
                        </div>  
                        <div class="col-md-6 form-group">
                            <label asp-for="Surname">Last Name</label>
                            <input class="form-control" type="text" asp-for="Surname" placeholder="Doe">
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Email">E-mail</label>
                            <input class="form-control" type="email" asp-for="Email" placeholder="example@email.com">
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Phone">Mobile No</label>
                            <input class="form-control" type="tel" asp-for="Phone" placeholder="+123 456 789">
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Detail1">Address Line 1</label>
                            <input class="form-control" type="text" asp-for="Detail1" placeholder="123 Street">
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Detail2">Address Line 2</label>
                            <input class="form-control" type="text" asp-for="Detail2" placeholder="123 Street">
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Country">Country</label>
                            <input class="form-control" type="text" asp-for="Country" placeholder="Azerbaijan">
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="City">City</label>
                            <input class="form-control" type="text" asp-for="City" placeholder="Baku">
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="District">State</label>
                            <input class="form-control" type="text" asp-for="District" placeholder="Baku">
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="ZipCode">ZIP Code</label>
                            <input class="form-control" type="text" asp-for="ZipCode" placeholder="123">
                        </div>

                        <div class="col-md-6 form-group">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Total</span></h5>
            @await Component.InvokeAsync(nameof(_OrderSummaryComponentPartial))
            @await Component.InvokeAsync(nameof(_PaymentMethodComponentPartial))
        </div>
    </div>
</div>
