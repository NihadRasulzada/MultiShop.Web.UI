@model List<BasketItemDto>
@{
    decimal summary = 0;
}

<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Order Product List</h6>
        @foreach (var item in Model)
        {
            summary += item.Price * item.Quantity;
            <div class="d-flex justify-content-between">
                <p>@item.ProductName (@item.Quantity)</p>
                <h6>@item.Price $</h6>
            </div>
        }
    </div>
    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>Shopping Amount (Including VAT)</h6>
            <h6>@summary $</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Shipping Fee</h6>
            <h6 class="font-weight-medium">12 $</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Total</h5>
            <h5>@(summary + 12) $</h5>
        </div>
    </div>
</div>
