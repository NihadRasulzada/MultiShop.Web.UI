@model List<ResultCommentDto>

<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-4">@Model.Count review for "Product Name"</h4>
            @if(Model != null || Model.Count !> 0)
            {
                @foreach (var item in Model)
                {
                    <div class="media mb-4">
                        <img src="~/multishop-1.0.0/img/user.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                        <div class="media-body">
                            <h6>@item.FullName<small> - <i>@item.CreatedDate.ToShortDateString()</i></small></h6>
                            <div class="text-primary mb-2">
                                @if(item.Rating == 1)
                                {
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                }
                                else if(item.Rating == 2)
                                {
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                }
                                else if(item.Rating == 3)
                                {
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                }
                                else if (item.Rating == 4)
                                {
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    @* <i class="fas fa-star-half-alt"></i> *@
                                     <i class="far fa-star"></i>
                                }
                                else if (item.Rating == 5)
                                {
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                }
                            </div>
                            <p>@item.CommentDetail</p>
                        </div>
                    </div>
                }
            }
        </div>
        @await Html.PartialAsync("~/Views/ProductList/AddComment.cshtml")
    </div>
</div>